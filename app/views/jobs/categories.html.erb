<div class="screen">
  <div class="container">
    <div class="list-container">
      <ul>
        <h2>Agile <%= @job.category %> Jobs</h2>
        <% if @job.category == @job %>
          <% @jobs.each do |job| %>
            <%= link_to job_path(job) do %>
                <% if job.company.photo.attached? %>
                <%= image_tag job.company.logo, width: 40, height: 40, class: "avatar-small" %>
                <% end %>
                  <%if job.new? %>
                  <div class="job-card job-card-new">
                    <p class="new-tag">NEW</p>
                    <div class="job-card-info-infos">
                      <div>
                        <p><%= job.company.name %></p>
                        <h3><%= job.title %></h3>
                      </div>
                    </div>
                    <% if job.featured? %>
                    <p class="featured">Featured</p>
                    <% end %>
                  <% else %>
                  <div class="job-card">
                    <div class="job-card-info-infos">
                      <p><%= job.company.name %></p>
                      <h3><%= job.title %></h3>
                      <p><%= job.created_at.strftime('Posted %b %d') %></p>
                    </div>
                  </div>
                  <% end %>
                </div>
              </a>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
